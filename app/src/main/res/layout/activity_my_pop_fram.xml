<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.administrator.myapplication.activity.MyPopActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_Right"
            android:layout_marginLeft="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在漫天风沙里望着你远去我竟悲伤的不能自己"/>
        </LinearLayout>

        <include
            android:id="@+id/include"
            layout="@layout/popup_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#060606"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/back"/>

            <ImageView
                android:id="@+id/iv_usb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/usb"/>

            <ImageView
                android:id="@+id/iv_only_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/onlyone"/>

            <ImageView
                android:id="@+id/iv_classic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/classic"/>

            <ImageView
                android:id="@+id/iv_option"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/option"/>
        </LinearLayout>


    </FrameLayout>
</LinearLayout>
